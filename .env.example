# =============================================================================
# HANGMAN GAME - EXAMPLE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copiez ce fichier en .env et adaptez les valeurs selon votre environnement
# =============================================================================

# Application
APP_NAME="Hangman Game"
APP_ENV=production
APP_DEBUG=false
APP_VERSION=5.0.0

# Base de données MySQL
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_secure_password

# API Configuration
API_VERSION=1.0.0
API_BASE_PATH=/games/pendu/api
API_CACHE_TTL=300
API_DEBUG=false

# Sécurité
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600

# Cache
CACHE_ENABLED=true
CACHE_TTL=300

# Logging (pour évolutions futures)
LOG_LEVEL=error
LOG_FILE=storage/logs/hangman.log

# CORS
CORS_ALLOWED_ORIGINS=https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Features flags (pour évolutions futures)
FEATURE_MULTIPLAYER=false
FEATURE_ADMIN_PANEL=true
FEATURE_STATISTICS_SHARING=false
FEATURE_CUSTOM_WORD_PACKS=false

# Administration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_SESSION_TIMEOUT=3600

# Performance
DB_POOL_SIZE=10
API_TIMEOUT=30

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Le jeu est temporairement en maintenance."