{
    "name": "arcade-franck/hangman-game",
    "description": "Jeu du pendu moderne avec interface d'administration et tests API exhaustifs",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Franck",
            "email": "franck@example.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "ArcadeFranck\\Hangman\\": "api/classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArcadeFranck\\Hangman\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/ --display-warnings --colors=always",
        "test-auth": "phpunit tests/AuthenticationTest.php --display-warnings --colors=always",
        "test-categories": "phpunit tests/CategoriesApiTest.php --display-warnings --colors=always", 
        "test-words": "phpunit tests/WordsApiTest.php --display-warnings --colors=always",
        "test-tags": "phpunit tests/TagsApiTest.php --display-warnings --colors=always",
        "test-category-words": "phpunit tests/CategoryWordsApiTest.php --display-warnings --colors=always"
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true
    }
}